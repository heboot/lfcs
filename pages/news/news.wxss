/* news.wxss */
@import "../../utils/wxParse/wxParse.wxss";

.news-container{
  width: 100%;
   height: 100%;
}

.news-image{
  width: 100%;
  height: 200rpx;
}

.news-title{
  width: 100%;
  height: 30px;
  font-size: 16px;
  text-align: center;
  background-color: red;
  align-content: center;
  align-items: center;
}

.article__content{
    font-size: 28rpx;
    color: #333;
    line-height: 42rpx;
    word-break: break-all;
    text-indent: 2em;
}