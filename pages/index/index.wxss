/**index.wxss**/
.banner{
  width:750rpx;
  background-color: #eee;
  height: 380rpx;
}

.banner-item{
  width: 100%;
  height: 200px;
}

.navs {
  width: 100%;
  display: flex;
}

.nav-item {
  width: 33%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}

.news-titlebg{
  width: 100%;
  padding: 7px;
  background-color: #eee;
}

.news-title{
  margin-left: 10px;
  font-size: 15px;
  color: #8E8E8E;
}

.news-item{
  padding: 5px;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;

}

.news-item-title{
  margin-left: 10px;
  font-weight: 400;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}

.news-item-desc{
   color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  width: 100%;
}
.news-item-image{
  margin-left: 5px;
  width: 120px;
  height: 65px;
}





/** global weui article **/

.articles{
  background-color: #fff;
}
.article__item{
  width: 700rpx;
   
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
 
  width:4.2rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__title{
  font-weight: 400;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
   
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}
/* 支持多行 */
.article__title__large{
  
}

.article__desc{  margin-left: 10px;
  color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  width: 100%;

}

.article__item__cover{
  display: block;
}
.article__cover{
  padding-bottom: 10rpx;
  overflow: hidden;
}
.article__ad{
  width: 100%;
  height: 4rem;
  border-radius: 10rpx;
}

.article__remark{
  bottom: 0;
  width: 20rem;
  display: block;
  font-size: 28rpx;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 0rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.article__imgview{
  width: 200rpx;
  height: 142rpx;
  padding: 15rpx;
}